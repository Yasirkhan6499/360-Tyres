    <script>
    // Listen for submit on the form
    document.querySelector('.form').addEventListener('submit', function(e){
        // Prevent form from submitting
        e.preventDefault;
        // Set local storage item lastLogin to current timestamp
        localStorage.setItem('lastLogin', Math.floor((Date.now() / 1000)));
        // Submit the form manually
        this.submit();
    });
    // Check local storage for the timestamp and display a message if it matches the conditions
    function guestChecker() {
        var lastLogin = localStorage.lastLogin;
	      var element = document.getElementById("guestMessage");
	      if (lastLogin && lastLogin < Math.floor((Date.now() / 1000)) - 604800 && lastLogin > Math.floor((Date.now() / 1000)) - 691200) {
		      element.innerHTML = "<div style='line-height:22px;' class='text-justify'><h2 class=\"login-header\">Guest access has expired</h2>Your guest access has expired. If you wish to extend it for another 7 days please log-in using the guest account details you created when registering.<br><br>If you are a resident, and now know your Unite Students email address used for your booking, update the email in your <strong><a href='https://my.glidestudent.co.uk/account/editaccount'>Glide My Account</a></strong> to get uninterrupted Wi-Fi access for the duration of your stay.<br><br>If you booked through the university or don't yet have an account with Unite Students, find out what to do <strong><a href='#' data-toggle='modal' data-target='#myModal'>here</a></strong>.</div><br>If the university booked on your behalf, then you may need to update the email address in your Glide account to your university email address.<br>"
	  }
	}
